<view class="container">
  <view class="title">注册账号</view>
  
  <view class="form">
    <view class="form-item">
      <text class="iconfont icon-phone"></text>
      <input class="input" type="number" placeholder="请输入手机号" model:value="{{phone}}" maxlength="11" />
    </view>
    <view class="form-item">
      <text class="iconfont icon-lock"></text>
      <input class="input" type="password" placeholder="请设置密码" model:value="{{password}}" />
    </view>
    <view class="form-item">
      <text class="iconfont icon-lock"></text>
      <input class="input" type="password" placeholder="请确认密码" model:value="{{confirmPassword}}" />
    </view>
    <view class="form-item">
      <text class="iconfont icon-company"></text>
      <input class="input" placeholder="请输入公司名称" model:value="{{companyName}}" />
    </view>
    <view class="form-item">
      <text class="iconfont icon-user"></text>
      <input class="input" placeholder="请输入联系人姓名" model:value="{{contactName}}" />
    </view>
    <view class="form-item">
      <text class="iconfont icon-address"></text>
      <input class="input" placeholder="请输入公司地址" model:value="{{address}}" />
    </view>
    <view class="form-item">
      <text class="iconfont icon-invite"></text>
      <input class="input" placeholder="请输入邀请码" model:value="{{inviteCode}}" />
    </view>
    <button class="submit-btn" bindtap="handleRegister">注册</button>
    <view class="login-link" bindtap="goToLogin">已有账号？立即登录</view>
  </view>
</view> 