.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.logo-placeholder {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  background-color: #1AAD19;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border-radius: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.login-section {
  text-align: center;
  padding: 40rpx 0;
}

.welcome {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  display: block;
}

.btn-group {
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
}

.btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.register {
  background-color: #1AAD19;
  color: #fff;
}

.login {
  background-color: #fff;
  color: #1AAD19;
  border: 2rpx solid #1AAD19;
}

.user-section {
  padding: 20rpx 0;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  background-color: #1AAD19;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.menu-list {
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eee;
}

.menu-item text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 24rpx;
} 