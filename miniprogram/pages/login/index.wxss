.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  height: 100vh;
  background-color: #F7F8FA;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
}

.title {
  font-size: 48rpx;
  color: #1AAD19;
  margin: 20rpx 0 40rpx;
}

.form {
  width: 100%;
}

.form-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.iconfont {
  font-size: 40rpx;
  color: #666;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  font-size: 32rpx;
}

.submit-btn {
  width: 100%;
  background-color: #1AAD19;
  color: #fff;
  font-size: 36rpx;
  border-radius: 10rpx;
}

.register-link {
  text-align: center;
  color: #1AAD19;
  font-size: 28rpx;
  margin-top: 40rpx;
}